[general]
accounts = calebdeanwatson
pythonfile = ~/.local/bin/+mu/lib.py

[DEFAULT]

[Account calebdeanwatson]
localrepository = calebdeanwatson-local
remoterepository = calebdeanwatson-remote
synclabels = yes
labelsheader = X-Keywords
maxconnections = 2

[Repository calebdeanwatson-local]
type = GmailMaildir
localfolders = ~/.local/share/mail/gmail.com/calebdeanwatson
nametrans = nametrans

[Repository calebdeanwatson-remote]
type = Gmail
remoteusereval = get_pass("calebdeanwatson")["user"]
remotepasseval = get_pass("calebdeanwatson")["password"]
realdelete=no
ssl = true
createfolders = False
nametrans = lambda foldername: re.sub ('^\[gmail\]', 'bak',
                               re.sub ('sent_mail', 'sent',
                               re.sub ('starred', 'flagged',
                               re.sub (' ', '_', foldername.lower()))))
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
